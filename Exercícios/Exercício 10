// Ex 10 - Faça um programa que converta a temperatura dada em Fahrenheit para Celsius.  Para testar se a sua resposta está correta saiba que 100ºC = 212F. Considere C/5 = (F-32)/9

import java.util.Scanner;

public class temperatura {
    public static void main(String[] args) {

        double fahrenheit;

        Scanner input = new Scanner(System.in);
        System.out.print("Informe a temperatura em fahrenheit: ");
        fahrenheit = input.nextDouble();

        double celsius = ((fahrenheit - 32)/ 9) * 5;

        System.out.println("A temperatura em Celsius é: " + celsius + "°C");

        input.close();

        }
    }
